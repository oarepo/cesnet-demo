{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "https://repozitar.cesnet.cz/schemas/records/record-v1.0.0.json",
  "additionalProperties": false,
  "title": "CESNET OA Repository Demo Record v1.0.0",
  "type": "object",
  "allOf": [
    {
      "$ref": "../dcterms-v1.0.0.json#/definitions/DCObject"
    },
    {
      "$ref": "../invenio-v1.0.0.json#/definitions/InvenioRecord"
    },
    {
      "properties": {
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "difficulty": {
          "type": "string",
          "enum": ["beginner", "advanced", "hacker"],
          "$comment": "Expected level of knowledge about the presented topics"
        },
        "event": {
          "$ref": "../taxonomy-v1.0.0.json#/definitions/TaxonomyTerm",
          "$comment": "Conference or event where presentation took place"
        },
        "presenters": {
          "$ref": "../taxonomy-v1.0.0.json#/definitions/TaxonomyTermArray"
        },
        "topics": {
          "$ref": "../taxonomy-v1.0.0.json#/definitions/TaxonomyTermArray"
        },
        "thumbnail": {
          "type": "object",
          "additionalProperties": true
        },
        "source": {
          "type": "string",
          "$comment": "Source URI/code for the presentation media/player"
        }
      }
    }
  ],
  "required": [
    "$schema",
    "id",
    "title"
  ]
}
